{
  "extends": "airbnb/base",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "globals": {
    "document": true,
    "css":true,
    "localStorage": true,
    "require": true,
    "window": true,
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__DEVTOOLS__": true,
    "socket": true,
    "webpackIsomorphicTools": true
  },

  "rules": {
    "no-console": 0,
    'no-plusplus': 'off',
    "no-alert": 0,
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2
  },

  "plugins": [
    "babel",
    "react",
    "import"
  ]
}
